<main id="main">
  <div id="content">
    {% include 'home-recommended' %}
    <div class="collections" style="background-image:url('{{ settings.home_collection_background | img_url: 'master' }}')"​​​​​​>
      <div class="container">
        <p class="idx-tlt">Collections</p>
        <div class="pc">
          <ul>
            <li style="background-image:url('{{ settings.left_vertical_collection_banner | img_url: 'master' }}')">
